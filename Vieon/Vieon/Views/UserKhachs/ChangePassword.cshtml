@model Vieon.Models.ChangePassword

@{
    ViewBag.Title = "Edit_Info";
    Layout = "~/Views/Shared/ChiTiet.cshtml";
}
<style>

    h4 {
        margin-left: 400px;
    }

    .info {
        position: relative;
        float: left;
        width: fit-content;
        margin-left: 300px;
    }

        .info table {
            text-align: left;
        }

            .info table tr td {
                padding: 7px;
                padding-right: 20px;
                text-align: left;
            }

        .info input {
            font-size: 15px;
            border: none;
            border-bottom: 1px solid black;
        }

    .btn_add {
        margin-top: 30px;
        font-size: 20px;
        padding: 10px 15px;
        border: none;
        background-color: #3399ff;
        color: white;
        font-weight: bold;
        border-radius: 10px;
        margin-bottom: 50px;
    }

        .btn_add:hover {
            background-color: blue;
            color: #fff;
        }

    .btn_close {
        margin-top: 30px;
        font-size: 15px;
        padding: 10px 15px;
        border: none;
        background-color: #f00;
        color: white;
        font-weight: bold;
        border-radius: 10px;
        margin-bottom: 50px;
        margin-left: 20px;
    }

        .btn_close:hover {
            background-color: #d00;
            color: #fff;
        }
</style>

<html>
<head>
    <title>Sửa thông tin sản phẩm</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<body>
    <script>
    // Hiển thị alert khi có thông báo thành công từ TempData
    $(document).ready(function() {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            alert(successMessage);
        }
    });
    </script>


    @using (Html.BeginForm())
    {

        int userId = Convert.ToInt32(Session["ID"]);
        @Html.AntiForgeryToken()
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thay đổi mật khẩu</h4>
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="info">
                <table>
                    <tr>
                        <td>Mật khẩu hiện tại: </td>
                        <td style="width:200px">
                            @Html.PasswordFor(model => model.CurentPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CurentPassword, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td>Mật khẩu mới: </td>
                        <td style="width:500px">
                            @Html.PasswordFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>Xác nhận mật khẩu: </td>
                        <td style="width:500px">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                </table>
                <div>
                    <input type="submit" value="Lưu" class="btn btn_add" id="save" />
                    <a href="@Url.Action("Details", "UserKhachs", new {id = userId})" class="btn btn_close"> Hủy</a>
                </div>
            </div>
        </div>
    }



    @section scripts {

        <script>
            $(document).ready(function () {
                $("#save").click(function () {
                    var successMessage = '@TempData["SuccessMessage"]';
                    if (successMessage) {
                        alert(successMessage);
                    }
                });
            });
        </script>
    }

</body>
</html>

