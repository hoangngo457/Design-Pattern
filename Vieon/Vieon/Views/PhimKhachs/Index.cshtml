@model IEnumerable<Vieon.Models.Phim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .vip-badge {
        background-color: #c69c6d; 
        color: #fff; 
        position: absolute;
        top: 0;
        right: 0;
        padding: 5px;
        width:60px;
        margin-top:7%;
        margin-right:7.34%
    }
    .main-content-pro {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
    }

    .card-pro {
        border: 1px solid #ccc;
        transition: border 0.3s;
        width: 250px;
        height: 225px;
        margin-bottom: 25px;
    }

    .card-buttons {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    .card-pro:hover {
        border: 2px solid black;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.4);
        padding-top: 60px;
    }

    .modal-content {
        background-color: #fefefe;
        margin: 5% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

<div class="container">
    <div class="row">
        @{
            var userRole = Session["Role"] != null ? Session["Role"].ToString() : "Guest";
        }

        <div class="main-content-pro">
            @foreach (var pro in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    @if (pro.LoaiPhim == "Vip")
                    {
                        <text>
                            @if (userRole == "Vip" || userRole == "Admin")
                            {
                                <a href="/PhimKhachs/Details/@pro.ID_Phim">
                                    <div class="card-pro" style="text-align: center">
                                        <br />
                                        <img src="~/Content/images/@pro.HinhMinhHoa" width="200" height="140" />
                                        <div class="vip-badge">
                                            <h5>Vip</h5>
                                        </div>
                                        <br />
                                        <h6 style="color:black">@Html.DisplayFor(model => pro.TenPhim)</h6>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <a href="#" class="open-popup" data-id="@pro.ID_Phim">
                                    <div class="card-pro" style="text-align: center">
                                        <br />
                                        <img src="~/Content/images/@pro.HinhMinhHoa" width="200" height="140" />
                                        <div class="vip-badge">
                                            <h5>Vip</h5>
                                        </div>
                                        <br />
                                        <h6 style="color:black">@Html.DisplayFor(model => pro.TenPhim)</h6>
                                    </div>
                                </a>
                            }
                        </text>
                    }
                    else
                    {
                        <a href="/PhimKhachs/Details/@pro.ID_Phim">
                            <div class="card-pro" style="text-align: center">
                                <br />
                                <img src="~/Content/images/@pro.HinhMinhHoa" width="200" height="140" />
                                <br />
                                <h6 style="color:black">@Html.DisplayFor(model => pro.TenPhim)</h6>
                            </div>
                        </a>
                    }
                </div>
            }
        </div>

    </div>
</div>
<br />
<br />

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>


<script>
    $(document).ready(function(){
        $(".open-popup").click(function(){
            var id = $(this).data("id");
            $("#myModal").modal();
        });

        $(".close").click(function(){
            $("#myModal").modal("hide");
        });
    });
</script>


<div id="myModal" class="modal">
    <div class="modal-content" style="width:500px">
        <span class="close">&times;</span>
        <h4 style="text-align:center">Chỉ người dùng Vip mới được xem nội dung này</h4>
        <div class="card-buttons">
            <a href="~/MuaGoiVip/ThongTinGoi" class="btn btn-warning" style="margin-right:20px"> <span class="d-none d-md-inline-block">Đăng ký gói</span></a>
        </div>
    </div>
</div>
