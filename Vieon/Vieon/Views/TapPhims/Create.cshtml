            </div>
        </div>
      

        <div class="form-group">
            Số tập thêm
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoTap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoTap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên tập phim
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mô tả
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

